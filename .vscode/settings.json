{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.ts": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "directory": "../backend/sigma-api",
      "changeProcessCWD": true
    },
    {
      "directory": "../frontend/",
      "changeProcessCWD": true
    }
  ]
}